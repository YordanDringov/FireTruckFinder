@model FireTruckDetailsServiceModel
@{
    ViewData["Title"] = @Model.Make;
}

<h2>@Model.Make</h2>

<div class="row">
    <div class="form-group">
        <label asp-for="Model"></label>
        <span asp-validation-for="Model" class="text-danger">@Model.Model</span>
        <br />
        <label asp-for="ProduceDate"></label>
        <span asp-validation-for="ProduceDate" class="text-danger">@Model.ProduceDate</span>
        <br />
        <label asp-for="WatertankCapacity"></label>
        <span asp-validation-for="WatertankCapacity" class="text-danger">@Model.WatertankCapacity liter</span>
        <br />
        <label asp-for="Price"></label>
        <span asp-validation-for="Price" class="text-danger">@Model.Price $</span>
        <div class="col-lg-offset">
            <img src="@Model.ImageUrl" width="400" height="250" />
        </div> 
        <br />
        For more information contact to: @Model.Seller
    </div>  
</div>

