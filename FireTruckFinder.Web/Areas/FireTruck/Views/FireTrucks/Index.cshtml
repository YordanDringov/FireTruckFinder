@model FireTruckListingViewModel

@{
    ViewData["Title"] = " All FireTrucks";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-6 table-hover">
            @foreach (var firetruck in Model.FireTrucks)
            {
              <a asp-action="Details" asp-route-id="@firetruck.Id" asp-route-title="@firetruck.Model">@firetruck.Model</a>
              <img src="@firetruck.ImageUrl" width="200" height="160"/>
            }
    </div>
</div>

@if (Model.TotalFireTrucks > Model.FireTrucks.Count())
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.PreviousPage"
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.NextPage"
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}

