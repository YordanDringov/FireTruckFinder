@model FireTruckListingViewModel

@{
    ViewData["Title"] = " All FireTrucks";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <ul class="list-group article-list">
            @foreach (var firetruck in Model.FireTrucks)
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@firetruck.Id" asp-route-title="@firetruck.Make">@firetruck.Model</a>
                    <br />
                    <small>published by @firetruck.Seller.UserName</small>
                </li>
            }
        </ul>
    </div>
</div>

@if (Model.TotalFireTrucks > Model.FireTrucks.Count())
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.PreviousPage"
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.NextPage"
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}

